@using BugTrackerUI.Models
@using static System.Net.WebRequestMethods

@model IEnumerable<ApplicationViewModel>

<div>

    <div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Dropdown link
        </a>
        
        <div id="applicationDropdown" class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            @if(Model.Count() == 0)
            {
                <a id="addApplicationDropdown" class="dropdown-item" href="">Add</a>
                <!--<input id="applicationInput" hidden/>-->
            }

            @foreach (var item in Model)
            {
                <a class="dropdown-item">@item.ApplicationName</a>
                
            }
            <a id="addApplicationDropdown" class="dropdown-item">Add</a>
            <!--<input id="applicationInput" hidden/>-->
        </div>
    </div>
        
    
</div>
