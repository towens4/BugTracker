
@model BugTrackerUICore.Models.ViewModels.RegisterViewModel


<h2 class="my-4">Register</h2>
<form method="post" asp-action="Register" asp-controller="Account">
    @Html.ValidationSummary(false, "", new {@class = "error-text"})
    <div class="form-container">
        <label asp-for="Email"></label>
        <div>
            <input id="emailField" asp-for="Email" placeholder="Enter Your Email:" class="form-input" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-container">
        <label asp-for="Password"></label>
        <div>
            <input id="passwordField" asp-for="Password" placeholder="Password" class="form-input" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="form-container">
        <label asp-for="ConfirmPassword"></label>
        <div>
            <input id="confirmPasswordField" asp-for="ConfirmPassword" class="form-input" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <button type="submit" id="registerSubmit" class="btn btn-primary my-4">Register</button>
    <span class="mx-4">Have an account? <a class="account-link" asp-action="Login" asp-controller="Account">Log In</a></span>
</form>
