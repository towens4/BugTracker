
@using BugTrackerUICore.Models.ViewModels
@model IEnumerable<ErrorViewModel>

<table class="table table-light error-table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Exception</th>
            <th scope="col">Method Name</th>
            <th scope="col">File Location</th>
            <th scope="col">File Line</th>
            <th scope="col">Error Details</th>
            <th scope="col">Resolved</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0|| !Model.Any())
        {
            <h2>There are no errors to display</h2>
        }
        @foreach(var error in Model)
        {
            <tr class="table-row">
                <th scope="row" class="row-number">1</th>
                <td class="row-exception">@error.Exception</td>
                <td class="row-method-name">@error.MethodName</td>
                <td class="row-file-location">@error.FileLocation</td>
                <td class="row-file-line">@error.FileLine</td>
                <td class="row-error-details">@error.ErrorDetails</td>
                <td class="row-checkbox"><input type="checkbox" /></td>
            </tr>
        }
       
    </tbody>
</table>
<a>@Html.ActionLink("Demo Error", "ErrorTest", "Error")</a>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>